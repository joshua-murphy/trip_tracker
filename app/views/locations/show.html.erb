<%= link_to 'Back', trip_locations_path(@trip)%> | 
<%= link_to 'Edit Location', edit_trip_location_path(@trip, @location)%> | 
<% if @location.address %>
  <%= link_to "Edit Address", edit_location_address_path(@location, @location.address) %> | 
  <%= link_to "Delete Address", location_address_path(@location, @location.address), method: :delete, 
  data: { confirm: "Are you sure?" } %> | 
<% end %>
<%= link_to 'Delete Location', trip_location_path(@trip, @location), method: :delete, 
  data: { confirm: "Are you sure?" } %>

<h1><%= @location.name %></h1>

<% if @location.address %>
  <h3><%= @location.address.street_address %> <%= @location.address.city %>,
  <%= @location.address.state %> <%= @location.address.zip %></h3>
<% else %>
  <%= link_to "Add address", new_location_address_path(@location) %>
<% end %>
