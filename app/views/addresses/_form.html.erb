<%= form_for [@location, @address] do |f| %>
  <%= f.label :street_address, "Street Address" %>
  <%= f.text_field :street_address, required: true, autofocus: true %>
  <br><br>
  <%= f.label :city %>
  <%= f.text_field :city, required: true %>
  <br><br>
  <%= f.label :state %>
  <%= f.text_field :state, required: true %>
  <br><br>
  <%= f.label :zip %>
  <%= f.text_field :zip, required: true %>
  <br><br>
  <%= f.submit "Save" %>
<% end %>

